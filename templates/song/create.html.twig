{% extends 'base.html.twig' %}

{% block title %}Create song{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h1 class="text-center">Create Song</h1>
                        {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_widget(form) }}
                        </div>
                        <button
                                type="submit"
                                class="btn btn-primary">
                            Create Song
                        </button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
